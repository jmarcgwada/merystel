/**
 * @fileoverview Firestore Security Rules for Zenith POS.
 *
 * Core Philosophy:
 * This ruleset enforces a strict company-based data isolation model. All data
 * is scoped to a specific company, and users must be authenticated and
 * associated with that company to access company data. User listing is
 * disallowed.  Schema validation is relaxed in this prototyping phase, but
 * authorization checks are strictly enforced.
 *
 * Data Structure:
 * - /users/{userId}: Stores individual user profiles.
 * - /companies/{companyId}: Stores company-level information.
 * - All other collections are nested under a company (e.g.,
 *   /companies/{companyId}/customers/{customerId}).
 *
 * Key Security Decisions:
 * - Users can only read/write their own user document.
 * - Listing users is not allowed.
 * - All company-related data requires the user to be authenticated and
 *   associated with the company.
 *
 * Denormalization for Authorization:
 * To simplify rules and improve performance, the `User` document includes a
 * `companyId` field. This allows us to verify a user's company association
 * without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows a user to read and write their own user document.
     * @path /users/{userId}
     * @allow (get, create, update, delete) if request.auth.uid == userId
     * @deny (get, create, update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows read and write access to company documents for authenticated users.
     * @path /companies/{companyId}
     * @allow (get, list) if isSignedIn()
     * @allow (create, update, delete) if false; // TODO: Add company admin role check
     * @deny (create, update, delete) if true
     * @principle Requires authentication for company access.
     */
    match /companies/{companyId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to customer documents for users associated with the company.
     * @path /companies/{companyId}/customers/{customerId}
     * @allow (get, list) if isCompanyUser(companyId)
     * @allow (create, update, delete) if isCompanyUser(companyId)
     * @deny (create) if request.resource.data.id != customerId
     * @deny (update) if request.resource.data.id != resource.data.id
     * @principle Enforces company-level data isolation.
     */
    match /companies/{companyId}/customers/{customerId} {
      allow get: if isCompanyUser(companyId);
      allow list: if isCompanyUser(companyId);
      allow create: if isCompanyUser(companyId) && request.resource.data.id == customerId;
      allow update: if isCompanyUser(companyId) && request.resource.data.id == resource.data.id;
      allow delete: if isCompanyUser(companyId);
    }

    /**
     * @description Allows access to supplier documents for users associated with the company.
     * @path /companies/{companyId}/suppliers/{supplierId}
     * @allow (get, list) if isCompanyUser(companyId)
     * @allow (create, update, delete) if isCompanyUser(companyId)
     * @deny (create) if request.resource.data.id != supplierId
     * @deny (update) if request.resource.data.id != resource.data.id
     * @principle Enforces company-level data isolation.
     */
    match /companies/{companyId}/suppliers/{supplierId} {
      allow get: if isCompanyUser(companyId);
      allow list: if isCompanyUser(companyId);
      allow create: if isCompanyUser(companyId) && request.resource.data.id == supplierId;
      allow update: if isCompanyUser(companyId) && request.resource.data.id == resource.data.id;
      allow delete: if isCompanyUser(companyId);
    }

    /**
     * @description Allows access to category documents for users associated with the company.
     * @path /companies/{companyId}/categories/{categoryId}
     * @allow (get, list) if isCompanyUser(companyId)
     * @allow (create, update, delete) if isCompanyUser(companyId)
     * @principle Enforces company-level data isolation.
     */
    match /companies/{companyId}/categories/{categoryId} {
      allow get: if isCompanyUser(companyId);
      allow list: if isCompanyUser(companyId);
      allow create: if isCompanyUser(companyId);
      allow update: if isCompanyUser(companyId);
      allow delete: if isCompanyUser(companyId);
    }

    /**
     * @description Allows access to item documents for users associated with the company.
     * @path /companies/{companyId}/items/{itemId}
     * @allow (get, list) if isCompanyUser(companyId)
     * @allow (create, update, delete) if isCompanyUser(companyId)
     * @principle Enforces company-level data isolation.
     */
    match /companies/{companyId}/items/{itemId} {
      allow get: if isCompanyUser(companyId);
      allow list: if isCompanyUser(companyId);
      allow create: if isCompanyUser(companyId);
      allow update: if isCompanyUser(companyId);
      allow delete: if isCompanyUser(companyId);
    }

    /**
     * @description Allows access to table documents for users associated with the company.
     * @path /companies/{companyId}/tables/{tableId}
     * @allow (get, list) if isCompanyUser(companyId)
     * @allow (create, update, delete) if isCompanyUser(companyId)
     * @principle Enforces company-level data isolation.
     */
    match /companies/{companyId}/tables/{tableId} {
      allow get: if isCompanyUser(companyId);
      allow list: if isCompanyUser(companyId);
      allow create: if isCompanyUser(companyId);
      allow update: if isCompanyUser(companyId);
      allow delete: if isCompanyUser(companyId);
    }

    /**
     * @description Allows access to sale documents for users associated with the company.
     * @path /companies/{companyId}/sales/{saleId}
     * @allow (get, list) if isCompanyUser(companyId)
     * @allow (create, update, delete) if isCompanyUser(companyId)
     * @principle Enforces company-level data isolation.
     */
    match /companies/{companyId}/sales/{saleId} {
      allow get: if isCompanyUser(companyId);
      allow list: if isCompanyUser(companyId);
      allow create: if isCompanyUser(companyId);
      allow update: if isCompanyUser(companyId);
      allow delete: if isCompanyUser(companyId);
    }

    /**
     * @description Allows access to payment method documents for users associated with the company.
     * @path /companies/{companyId}/paymentMethods/{methodId}
     * @allow (get, list) if isCompanyUser(companyId)
     * @allow (create, update, delete) if isCompanyUser(companyId)
     * @principle Enforces company-level data isolation.
     */
    match /companies/{companyId}/paymentMethods/{methodId} {
      allow get: if isCompanyUser(companyId);
      allow list: if isCompanyUser(companyId);
      allow create: if isCompanyUser(companyId);
      allow update: if isCompanyUser(companyId);
      allow delete: if isCompanyUser(companyId);
    }

    /**
     * @description Allows access to VAT rate documents for users associated with the company.
     * @path /companies/{companyId}/vatRates/{vatId}
     * @allow (get, list) if isCompanyUser(companyId)
     * @allow (create, update, delete) if isCompanyUser(companyId)
     * @principle Enforces company-level data isolation.
     */
    match /companies/{companyId}/vatRates/{vatId} {
      allow get: if isCompanyUser(companyId);
      allow list: if isCompanyUser(companyId);
      allow create: if isCompanyUser(companyId);
      allow update: if isCompanyUser(companyId);
      allow delete: if isCompanyUser(companyId);
    }

    /**
     * @description Allows access to held order documents for users associated with the company.
     * @path /companies/{companyId}/heldOrders/{orderId}
     * @allow (get, list) if isCompanyUser(companyId)
     * @allow (create, update, delete) if isCompanyUser(companyId)
     * @principle Enforces company-level data isolation.
     */
    match /companies/{companyId}/heldOrders/{orderId} {
      allow get: if isCompanyUser(companyId);
      allow list: if isCompanyUser(companyId);
      allow create: if isCompanyUser(companyId);
      allow update: if isCompanyUser(companyId);
      allow delete: if isCompanyUser(companyId);
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
    return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
  }

  function isCompanyUser(companyId) {
    return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
  }
}