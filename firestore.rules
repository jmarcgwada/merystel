    /**
     * @description Controls access to payment methods for a specific company.
     * @path /companies/{companyId}/paymentMethods/{methodId}
     * @allow (get, list) Any authenticated user can view payment methods within their company.
     *   - request.auth.uid: 'any_user'
     * @allow (create, update, delete) Only users belonging to the company can create, update, or delete payment methods.
     *   - TODO: Implement company membership check
     * @deny (create, update, delete) Users from other companies cannot create, update, or delete payment methods.
     *   - request.auth.uid: 'other_company_user'
     * @principle Enforces company-based data access for payment methods.
     */
    match /companies/{companyId}/paymentMethods/{methodId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;  // TODO: Add company membership validation.
    }

    /**
     * @description Controls access to VAT rates for a specific company.
     * @path /companies/{companyId}/vatRates/{vatId}
     * @allow (get, list) Any authenticated user can view VAT rates within their company.
     *   - request.auth.uid: 'any_user'
     * @allow (create, update, delete) Only users belonging to the company can create, update, or delete VAT rates.
     *   - TODO: Implement company membership check
     * @deny (create, update, delete) Users from other companies cannot create, update, or delete VAT rates.
     *   - request.auth.uid: 'other_company_user'
     * @principle Enforces company-based data access for VAT rates.
     */
    match /companies/{companyId}/vatRates/{vatId} {
      allow get, list: if isSignedIn();
