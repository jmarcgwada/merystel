     * @deny (create, update, delete) - Unauthenticated user attempts to modify supplier data.
     * @principle Authenticated users can manage supplier data.
     */
    match /companies/{companyId}/suppliers/{supplierId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list, create, update, delete: if isSignedIn();
    }

    /**
     * @description Manages item categories for a company. All authenticated users have access.
     * @path /companies/{companyId}/categories/{categoryId}
     * @allow (get, list) - Any authenticated user can read category data for any company.
     * @allow (create, update, delete) - Any authenticated user can modify category data for any company.
     * @deny (create, update, delete) - Unauthenticated user attempts to modify category data.
     * @principle Authenticated users can manage category data.
     */
    match /companies/{companyId}/categories/{categoryId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list, create, update, delete: if isSignedIn();
    }

    /**
     * @description Manages items for a company. All authenticated users have access.
     * @path /companies/{companyId}/items/{itemId}
     * @allow (get, list) - Any authenticated user can read item data for any company.
     * @allow (create, update, delete) - Any authenticated user can modify item data for any company.
     * @deny (create, update, delete) - Unauthenticated user attempts to modify item data.
     * @principle Authenticated users can manage item data.
     */
    match /companies/{companyId}/items/{itemId} {
      function isSignedIn() {
