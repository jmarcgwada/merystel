/**
 * @file Firebase Security Rules for Zenith POS.
 *
 * @core_philosophy This ruleset employs a strict user-ownership and company-based access control model.
 *  - Users can only manage their own profile data.
 *  - Companies serve as data silos; users within a company have access to company-specific data.
 * @data_structure
 *  - User profiles are stored under `/users/{userId}`.
 *  - Company data is stored under `/companies/{companyId}`, with subcollections for customers, categories, etc.
 * @key_security_decisions
 *  - Listing of all users is disallowed to prevent information disclosure.
 * @denormalization_for_authorization
 *  - Company ID is included in the user profile to simplify company-based data access rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile information.
     * @path /users/{userId}
     * @allow (create) User with ID 'test_user' can create their own profile.
     *   - request.auth.uid: 'test_user'
     *   - resource.data.id: 'test_user'
     * @allow (get, update, delete) User with ID 'test_user' can read, update, and delete their own profile.
     *   - request.auth.uid: 'test_user'
     *   - resource.data.id: 'test_user'
     * @deny (create) User with ID 'test_user' cannot create a profile with a different ID.
     *   - request.auth.uid: 'test_user'
     *   - resource.data.id: 'other_user'
     * @deny (get, update, delete) User with ID 'test_user' cannot read, update or delete another user's profile.
     *   - request.auth.uid: 'test_user'
     *   - resource.data.id: 'other_user'
     * @deny (list) No one can list all users.
     * @principle Enforces user-ownership for profile management.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isOwner(userId) && resource.data.id == request.resource.data.id;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to company information.
     * @path /companies/{companyId}
     * @allow (get, list) Any authenticated user can view company information.
     *   - request.auth.uid: 'any_user'
     * @allow (create, update, delete) Only the company owner/admin can create, update, or delete company information.
     *   - TODO: Implement company ownership/admin check
     * @deny (create, update, delete) Any regular user cannot create, update, or delete company information.
     *   - request.auth.uid: 'any_user'
     * @principle Restricts company management to authorized personnel.
     */
    match /companies/{companyId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false; // TODO: Add company owner validation once the schema is updated with an ownership field.
    }

    /**
     * @description Controls access to customer data for a specific company.
     * @path /companies/{companyId}/customers/{customerId}
     * @allow (get, list) Any authenticated user can view customer data within their company.
     *   - request.auth.uid: 'any_user'
     * @allow (create, update, delete) Only users belonging to the company can create, update, or delete customer data.
     *   - TODO: Implement company membership check
     * @deny (create, update, delete) Users from other companies cannot create, update, or delete customer data.
     *   - request.auth.uid: 'other_company_user'
     * @principle Enforces company-based data access for customers.
     */
    match /companies/{companyId}/customers/{customerId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false; // TODO: Add company membership validation.
    }

    /**
     * @description Controls access to item categories for a specific company.
     * @path /companies/{companyId}/categories/{categoryId}
     * @allow (get, list) Any authenticated user can view categories within their company.
     *   - request.auth.uid: 'any_user'
     * @allow (create, update, delete) Only users belonging to the company can create, update, or delete categories.
     *   - TODO: Implement company membership check
     * @deny (create, update, delete) Users from other companies cannot create, update, or delete categories.
     *   - request.auth.uid: 'other_company_user'
     * @principle Enforces company-based data access for categories.
     */
    match /companies/{companyId}/categories/{categoryId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;  // TODO: Add company membership validation.
    }

    /**
     * @description Controls access to items for a specific company.
     * @path /companies/{companyId}/items/{itemId}
     * @allow (get, list) Any authenticated user can view items within their company.
     *   - request.auth.uid: 'any_user'
     * @allow (create, update, delete) Only users belonging to the company can create, update, or delete items.
     *   - TODO: Implement company membership check
     * @deny (create, update, delete) Users from other companies cannot create, update, or delete items.
     *   - request.auth.uid: 'other_company_user'
     * @principle Enforces company-based data access for items.
     */
    match /companies/{companyId}/items/{itemId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;  // TODO: Add company membership validation.
    }

    /**
     * @description Controls access to tables for a specific company.
     * @path /companies/{companyId}/tables/{tableId}
     * @allow (get, list) Any authenticated user can view tables within their company.
     *   - request.auth.uid: 'any_user'
     * @allow (create, update, delete) Only users belonging to the company can create, update, or delete tables.
     *   - TODO: Implement company membership check
     * @deny (create, update, delete) Users from other companies cannot create, update, or delete tables.
