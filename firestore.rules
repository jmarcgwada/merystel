    }
    
    /**
     * @description This rule was automatically generated based on an error reported by the application.
     * It grants list access to the items collection within a company for authenticated users.
     * @path /companies/main/items
     * @allow (list) - Authenticated users can list items.
     * @deny (list) - Unauthenticated users cannot list items.
     * @principle Grants list access to authenticated users.
     */
    match /companies/{companyId}/items {
        function isSignedIn() {
          return request.auth != null;
        }
        allow list: if isSignedIn();
        allow get: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }
  }
