/**
 * @fileOverview Firestore Security Rules for the Zenith POS system.
 *
 * Core Philosophy:
 * This ruleset enforces a multi-tenant security model where data is segregated by company.
 * Users can only access data associated with their company ID. Root-level user documents
 * are accessible only to the owning user.
 *
 * Data Structure:
 * - /users/{userId}: Stores individual user profiles.
 * - /companies/{companyId}: Stores company-level data.
 * - /companies/{companyId}/*: All other data is nested under a company ID.
 *
 * Key Security Decisions:
 * - Users can only create their own user document (self-registration).
 * - Data within a company is implicitly trusted to be managed by users with appropriate roles.
 * - Listing of users is not permitted, as this could expose sensitive information.
 *
 * Denormalization for Authorization:
 * The `User` entity includes a `companyId` field, which is used to enforce tenant separation.
 * This avoids the need for complex queries to determine which company a user belongs to.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows a user to create their own user document, and restricts all other access.
     * @path /users/{userId}
     * @allow (create) - Allows a user to create their own document if the userId matches their auth UID.
     * @deny (get, list, update, delete) - Denies all other operations on user documents.
     * @principle Self-creation with strict ownership.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      // Read Permissions
      allow get: if false;
      allow list: if false;

      // Write Permissions
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows full access to company documents.
     * @path /companies/{companyId}
     * @allow (get, list, create, update, delete) - Allows all operations on company documents.
     * @principle Open access within the company scope (implicit trust).
     */
    match /companies/{companyId} {
      // Read Permissions
      allow get: if true;
      allow list: if true;

      // Write Permissions
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }

    /**
     * @description Allows full access to customer documents within a company.
     * @path /companies/{companyId}/customers/{customerId}
     * @allow (get, list, create, update, delete) - Allows all operations on customer documents.
     * @principle Open access within the company scope (implicit trust).
     */
    match /companies/{companyId}/customers/{customerId} {
      // Read Permissions
      allow get: if true;
      allow list: if true;

      // Write Permissions
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }

    /**
     * @description Allows full access to supplier documents within a company.
     * @path /companies/{companyId}/suppliers/{supplierId}
     * @allow (get, list, create, update, delete) - Allows all operations on supplier documents.
     * @principle Open access within the company scope (implicit trust).
     */
    match /companies/{companyId}/suppliers/{supplierId} {
      // Read Permissions
      allow get: if true;
      allow list: if true;

      // Write Permissions
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }

    /**
